{
  "name": "rssconv-action",
  "version": "1.0.0",
  "description": "",
  "author": "Rui Costa",
  "license": "MIT",
  "dependencies": {
    "@tuplo/series-with": "1.1.0",
    "cheerio": "1.0.0-rc.6",
    "feed": "4.2.2",
    "feedparser": "2.2.10",
    "mkdirp": "1.0.4",
    "node-fetch": "2.6.1",
    "p-pipe": "4.0.0",
    "user-agents": "1.0.626"
  },
  "devDependencies": {
    "@types/feedparser": "2.2.3",
    "@types/jest": "26.0.22",
    "@types/mkdirp": "1.0.1",
    "@types/node": "14.14.41",
    "@types/node-fetch": "2.5.10",
    "@types/user-agents": "1.0.0",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "esbuild": "0.11.12",
    "eslint": "7.24.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.5",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-raw-loader": "1.0.1",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4"
  },
  "scripts": {
    "build": "rimraf ./bin; esbuild src/index.ts --bundle --platform=node --outfile=bin/index.js",
    "ci:test": "jest --ci",
    "dev": "esbuild src/index.ts --bundle --platform=node --outfile=bin/index.js --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest --watch",
    "ts-check": "tsc --noEmit",
    "postinstall": "[ -z $CI ] && husky install || exit 0",
    "process": "node ./bin/index.js",
    "validate": "yarn lint; yarn ts-check; yarn ci:test"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/typescript",
      "plugin:jest/all"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 9,
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "import/extensions": 0,
      "import/prefer-default-export": 0,
      "jest/no-hooks": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "rules": {
          "no-undef": "off"
        }
      }
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest",
      "\\.xml$": "jest-raw-loader"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80
  }
}
