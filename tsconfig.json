{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": false,
    "declarationDir": null,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./bin",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}
